{
  "name": "HerusChatBot",
  "description": "Just another Telegram AI chat bot written in Python using Pyrogram.",
  "repository": "https://github.com/SakirBey1/HerusChatBot",
  "keywords" : [
    "python",
    "ai-bot",
    "telegram-ai-bot",
    "telegram-bot",
    "pyrogram",
    "arq"
  ],
  "stack": "heroku-20",
  "env": {
    "bot_token": {
           "description": "Bot Tokeni Girin @BotFather",
           "required": true
    },
    "ARQ_API_KEY": {
           "description": "@ARQRobot Bottan arq_apı_key alın",
           "required": true
    },
    "LANGUAGE": {
           "description": "Language of Chat Bot ,list --> https://py-googletrans.readthedocs.io/tr/latest/#googletrans-languages",
           "value": "tr",
           "required": true
    },
    "ARQ_API_BASE_URL": {
           "description": "ARQ URL ,Don't Change It",
           "value": "https://arq.hamker.in",
           "required": true
    }
  },
  "buildpacks": [
   {
    "url": "heroku/python"
   }
  ]
}
